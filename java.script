// Fun√ß√£o para trocar de etapa
function nextStep(stepNumber) {
    // Remove a classe active de todos
    document.querySelectorAll('.step').forEach(step => {
        step.classList.remove('active');
    });
    // Adiciona no passo atual
    const nextStepElement = document.getElementById('step' + stepNumber);
    if (nextStepElement) {
        nextStepElement.classList.add('active');
    }
}

// L√≥gica do Contador de Dias
const dataInicio = new Date("2024-11-15"); // Ajustado para 2024 para dar 60 dias
const hoje = new Date();
const diffTime = Math.abs(hoje - dataInicio);
const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));

// Insere o valor no seu HTML
window.onload = function() {
    const contadorElement = document.getElementById('contador');
    if (contadorElement) {
        contadorElement.innerText = diffDays;
    }
};

